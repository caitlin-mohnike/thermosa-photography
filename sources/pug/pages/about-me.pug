extends  ../_skeleton

block variables
	- var activeCategory = 'pages'
	- var pageName = 'About Me'

block page 
	// Page Header
	include ../sections/_header-minimal

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	include ../sections/_section-profile

	// Nathan’s Projects
	section.section.section-lg.bg-gray-100.text-center
		.container
			h3.section-title Portfolio
			include ../includes/_isotope-row-masonry

	// Nathan’s Blog Posts
	section.section.section-lg.text-center
		.container
			h3.section-title Blog Posts
			include ../includes/_row-blog-4-cols
			a.button.button-primary.button-winona(href='sidebar-blog.html') View More

	include ../sections/_section-testimonials-and-video

	// Page Footer
	include ../sections/_footer-standard
	+footer-standard({
		about: 'CaseCraft is one of the highest rated and most recommended business management companies. We employ the best experts in the nation, while also using innovative techniques to attract more customers to your company.'
	})
