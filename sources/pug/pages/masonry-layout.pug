extends  ../_skeleton

//- Includes
include ../components/_ui-thumbnail-corporate

block variables
	- var activeCategory = 'portfolio'
	- var pageName = 'Masonry Layout'

block page
	include ../sections/_header-minimal

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	}) 

	section.section.section-lg.oh
		.container
			// Isotope Filters
			.isotope-filters.isotope-filters-modern
				button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters', data-custom-toggle-disable-on-blur="true") Filter
					span.caret
				ul.isotope-filters-list#isotope-filters
					li: a.active(data-isotope-filter='*', data-isotope-group='portfolio', href='#') All Types
					li: a(data-isotope-filter='Type 1', data-isotope-group='portfolio', href='#') Individual 
					li: a(data-isotope-filter='Type 2', data-isotope-group='portfolio', href='#') Corporate

			.isotope.isotope-responsive.row(data-isotope-layout='masonry' data-isotope-group='portfolio' data-lightgallery='group' data-lg-thumbnail='false')
				.col-12.col-sm-6.col-lg-4.isotope-item.wow-outer
					+thumbnail-corporate({
						img: 'gallery-masonry-1-370x256',
						originalImg: 'gallery-original-1',
						link: 'single-project.html',
						title: 'Mary Williams',
						text: 'I offer high-quality photography & retouch services to individual and corporate clients all over the US.'
					}).wow.slideInDown

				.col-12.col-sm-6.col-lg-4.isotope-item.wow-outer
					+thumbnail-corporate({
						img: 'gallery-masonry-2-370x464',
						originalImg: 'gallery-original-2',
						link: 'single-project.html',
						title: 'YouthWear',
						text: 'I offer high-quality photography & retouch services to individual and corporate clients all over the US.'
					}).thumbnail-corporate-lg.wow.slideInDown

				.col-12.col-sm-6.col-lg-4.isotope-item.wow-outer
					+thumbnail-corporate({
						img: 'gallery-masonry-3-370x256',
						originalImg: 'gallery-original-3',
						link: 'single-project.html',
						title: 'Ultra Optix',
						text: 'I offer high-quality photography & retouch services to individual and corporate clients all over the US.'
					}).wow.slideInUp

				.col-12.col-sm-6.col-lg-4.isotope-item.wow-outer
					+thumbnail-corporate({
						img: 'gallery-masonry-4-370x464',
						originalImg: 'gallery-original-4',
						link: 'single-project.html',
						title: 'Accessories Inc.',
						text: 'I offer high-quality photography & retouch services to individual and corporate clients all over the US.'
					}).thumbnail-corporate-lg.wow.slideInUp

				.col-12.col-sm-6.col-lg-4.isotope-item.wow-outer
					+thumbnail-corporate({
						img: 'gallery-masonry-6-370x464',
						originalImg: 'gallery-original-6',
						link: 'single-project.html',
						title: 'Dwayne Winston',
						text: 'I offer high-quality photography & retouch services to individual and corporate clients all over the US.'
					}).thumbnail-corporate-lg.wow.slideInDown

				.col-12.col-sm-6.col-lg-4.isotope-item.wow-outer
					+thumbnail-corporate({
						img: 'gallery-masonry-5-370x256',
						originalImg: 'gallery-original-5',
						link: 'single-project.html',
						title: 'Sue Peterson',
						text: 'I offer high-quality photography & retouch services to individual and corporate clients all over the US.'
					}).wow.slideInDown

	// Page Footer
	include ../sections/_footer-standard
	+footer-standard({
		about: 'CaseCraft is one of the highest rated and most recommended business management companies. We employ the best experts in the nation, while also using innovative techniques to attract more customers to your company.'
	})
